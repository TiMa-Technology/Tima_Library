{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },   
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler", 
    "sourceMap": true,
  },
  "include": ["src/**/*"],
}
